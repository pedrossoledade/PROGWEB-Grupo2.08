generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User
model User {
  id       Int    @id @default(autoincrement())
  name     String
  cpf      String @unique
  phone    String 
  email    String @unique
  password String
  orders   Order[]
  cart     Cart?
}

// Product
model Product {
  id            Int                @id @default(autoincrement())
  code          String             @unique
  name          String
  price         Float
  photo         String?
  stockQuantity Int
  weight        Float?
  categories    Category[]
  variations    Variation[]
  dimensions    Dimension[]
  cartItems     CartItem[]
  orderItems    OrderItem[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Variation {
  id        Int      @id @default(autoincrement())
  size      String
  model     String
  color     String
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
}

model Dimension {
  id        Int      @id @default(autoincrement())
  productId Int
  length    Float?
  height    Float?
  width     Float?
  product   Product  @relation(fields: [productId], references: [id])
}

model Cart {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  user      User      @relation(fields: [userId], references: [id])
  items     CartItem[]
}

model CartItem {
  id        Int       @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int
  cart      Cart      @relation(fields: [cartId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
}

model Order {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  items     OrderItem[]
  total     Float
  createdAt DateTime  @default(now())
}

model OrderItem {
  id        Int       @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  order     Order     @relation(fields: [orderId], references: [id])
  product   Product   @relation(fields: [productId], references: [id])
}
